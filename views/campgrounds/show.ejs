<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				The Restaurant Gallery
			</p>
		<div class="list-group">
			<li class="list-group-item active">Info</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
			<img class="img-responsive" src="<%= campground.img %>">
			<div class="caption-full">
				<h4 class="pull-right">
					standard meal:<%=campground.price %>inr
				</h4>
				<h1>
	               <a><%= campground.name %></a>
				</h1>
				   <p>
	                  <%= campground.description %>
                  </p>
				<p>
					<i>created by: <%=campground.author.username %></i>
				</p>
				<% if(currentuser && campground.author.id.equals(currentuser._id)){ %>
				<a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-success">
					Edit
				</a>
				<form id="delete"  action="/campgrounds/<%=campground._id %>?_method=delete" method="post">
					<button class="btn btn-danger">
						Delete
					</button>
				</form>
				<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add A New Comment</a>
					<hr>
				</div>
				<% campground.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						 <p>
		                <%= comment.text %>
                         </p>
						<% if(currentuser && comment.author.id.equals(currentuser._id)){ %>
						<a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn btn-success">Edit</a>
						<form class="delete-comment" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=delete" method="post">
							<input type="submit" class="btn btn-danger" value="delete">
							
						</form>
						<% } %>
					</div>
				</div>
              <% }); %>
			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>